/* pages/order/list/list.wxss */
.container {
  padding: 30rpx;
  background: #f7f7f7;
}

.statistics {
  display: flex;
  justify-content: space-around;
  padding: 30rpx 30rpx;
  background: #fff;
  border-radius: 12rpx;
  margin-bottom: 30rpx;
}

.stat-item {
  text-align: center;
  padding: 5px;
}

.stat-item .num {
  font-size: 36rpx;
  font-weight: bold;
  color: #07c160;
  margin-bottom: 10rpx;
  padding: 3px;
}

.stat-item .label {
  font-size: 28rpx;
  color: #666;
}

.search-bar {
  background: #fff;
  padding: 20rpx;
  border-radius: 12rpx;
  margin-bottom: 30rpx;
}

.search-input-wrap {
  position: relative;
  display: flex;
  align-items: center;
}

.search-bar input {
  height: 72rpx;
  background: #f5f5f5;
  border-radius: 36rpx;
  padding: 0 30rpx;
  font-size: 28rpx;
  flex: 1;
  padding-right: 70rpx;
}

.search-icon {
  position: absolute;
  right: 30rpx;
  color: #999;
}

.status-tabs {
  display: flex;
  background: #fff;
  padding: 20rpx 0;
  margin-bottom: 30rpx;
  border-radius: 12rpx;
  width: 80%;
}

.tab-item {
  flex: 1;
  text-align: center;
  font-size: 28rpx;
  color: #333;
  position: relative;
}

.tab-item.active {
  color: #07c160;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: -20rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 40rpx;
  height: 4rpx;
  background: #07c160;
}

.order-list {
  padding-bottom: 30rpx;
}

.order-item {
  background: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
}

.order-header {
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.order-no {
  font-size: 28rpx;
  color: #333;
}

.order-status {
  font-size: 28rpx;
  color: #07c160;
}

.order-info {
  padding: 20rpx 0;
  border-bottom: 1rpx solid #eee;
}

.info-item {
  display: flex;
  font-size: 28rpx;
  margin-bottom: 16rpx;
}

.info-item .label {
  color: #999;
  width: 160rpx;
}

.info-item .amount {
  color: #ff4d4f;
  font-weight: bold;
}

.order-footer {
  padding-top: 20rpx;
  display: flex;
  justify-content: flex-end;
}

.btn-group {
  display: flex;
  gap: 20rpx;
}

.btn {
  margin: 0;
  padding: 0 30rpx;
  height: 64rpx;
  line-height: 64rpx;
  font-size: 28rpx;
  border-radius: 32rpx;
  background: #07c160;
  color: #fff;
}

.btn-cancel {
  background: #ff4d4f;
}

.loading,
.no-more,
.empty {
  text-align: center;
  font-size: 28rpx;
  color: #999;
  padding: 30rpx 0;
}