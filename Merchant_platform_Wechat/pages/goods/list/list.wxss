/* pages/goods/list/list.wxss */
.container {
  padding: 30rpx;
  padding-bottom: 120rpx;
  background: #FFF9F4;
}

.search-bar {
  background: #fff;
  padding: 20rpx;
  border-radius: 12rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.05);
  width: 90%;
  min-width: 600rpx;
  max-width: 800rpx;
  margin-left: auto;
  margin-right: auto;
}

.search-input-wrap {
  position: relative;
  display: flex;
  align-items: center;
}

.search-bar input {
  height: 72rpx;
  background: rgba(183, 188, 201, 0.1);
  border-radius: 36rpx;
  padding: 0 30rpx;
  font-size: 28rpx;
  flex: 1;
  padding-right: 100rpx;
}

.search-actions {
  position: absolute;
  right: 30rpx;
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.icon-wrap {
  width: 40rpx;
  height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  transition: all 0.3s ease;
}

.icon-wrap:hover {
  background: rgba(183, 188, 201, 0.2);
}

.search-icon, .clear-icon {
  color: #B7BCC9;
}

.filter-bar {
  display: flex;
  flex-direction: column;
  background: #fff;
  padding: 20rpx;
  border-radius: 12rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.05);
  width: 90%;
  min-width: 600rpx;
  max-width: 800rpx;
  margin-left: auto;
  margin-right: auto;
  border-left: 6rpx solid #655E82;
}

.filter-title {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.title-text {
  font-size: 32rpx;
  font-weight: bold;
  color: #403F43;
  margin-right: 20rpx;
}

.title-line {
  flex: 1;
  height: 2rpx;
  background: linear-gradient(to right, #655E82, #E6DDDB);
}

.filter-content {
  display: flex;
  justify-content: space-around;
}

.filter-item {
  flex: 1;
  text-align: center;
  font-size: 28rpx;
  color: #403F43;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 10rpx 20rpx;
  transition: all 0.3s ease;
  border-radius: 8rpx;
}

.filter-item:hover {
  background: rgba(183, 188, 201, 0.1);
}

.filter-item .arrow {
  margin-left: 10rpx;
  color: #B7BCC9;
}

.goods-list {
  padding-bottom: 30rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.goods-item {
  background: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.05);
  width: 90%;
  min-width: 600rpx;
  max-width: 800rpx;
  display: flex;
  position: relative;
  transition: all 0.3s ease;
}

.goods-item:hover {
  transform: translateY(-2rpx);
  box-shadow: 0 6rpx 16rpx rgba(0,0,0,0.08);
}

.goods-tag {
  position: absolute;
  top: 0;
  right: 30rpx;
  background: #655E82;
  color: #fff;
  padding: 4rpx 16rpx;
  border-radius: 0 0 8rpx 8rpx;
  font-size: 24rpx;
}

.goods-img {
  width: 160rpx;
  height: 160rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
  object-fit: cover;
}

.goods-info {
  flex: 1;
}

.goods-name {
  font-size: 32rpx;
  color: #403F43;
  margin-bottom: 10rpx;
}

.goods-category {
  font-size: 28rpx;
  color: #B7BCC9;
  margin-bottom: 10rpx;
}

.goods-price {
  font-size: 32rpx;
  color: #655E82;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.goods-stock {
  font-size: 28rpx;
  color: #B7BCC9;
}

.goods-actions {
  display: flex;
  flex-direction: column;
  justify-content: center;
  gap: 20rpx;
}

.btn {
  margin: 0;
  min-width: 120rpx;
  transition: all 0.3s ease;
}

.btn-primary {
  background: #655E82;
  color: #fff;
}

.btn-warning {
  background: #B7BCC9;
  color: #fff;
}

.btn:hover {
  opacity: 0.9;
}

.add-btn {
  position: fixed;
  right: 30rpx;
  bottom: 30rpx;
  width: 100rpx;
  height: 100rpx;
  background: #655E82;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
  font-size: 60rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.1);
  transition: all 0.3s ease;
}

.add-btn:hover {
  transform: translateY(-2rpx);
  box-shadow: 0 6rpx 16rpx rgba(0,0,0,0.15);
}

.loading,
.no-more,
.empty {
  text-align: center;
  font-size: 28rpx;
  color: #B7BCC9;
  padding: 30rpx 0;
}