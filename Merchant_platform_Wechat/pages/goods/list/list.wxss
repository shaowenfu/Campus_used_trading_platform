/* pages/goods/list/list.wxss */
.container {
  padding: 30rpx;
  padding-bottom: 120rpx;
  background: #f7f7f7;
}

.search-bar {
  background: #fff;
  padding: 20rpx;
  border-radius: 12rpx;
  margin-bottom: 30rpx;
}

.search-input-wrap {
  position: relative;
  display: flex;
  align-items: center;
}

.search-bar input {
  height: 72rpx;
  background: #f5f5f5;
  border-radius: 36rpx;
  padding: 0 30rpx;
  font-size: 28rpx;
  flex: 1;
  padding-right: 70rpx;
}

.search-icon {
  position: absolute;
  right: 30rpx;
  color: #999;
}

.filter-bar {
  display: flex;
  background: #fff;
  padding: 20rpx;
  border-radius: 12rpx;
  margin-bottom: 30rpx;
}

.filter-item {
  flex: 1;
  text-align: center;
  font-size: 28rpx;
  color: #333;
  display: flex;
  align-items: center;
  justify-content: center;
}

.filter-item .arrow {
  margin-left: 10rpx;
  color: #999;
}

.goods-list {
  padding-bottom: 30rpx;
}

.goods-item {
  background: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  display: flex;
}

.goods-img {
  width: 160rpx;
  height: 160rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
}

.goods-info {
  flex: 1;
}

.goods-name {
  font-size: 32rpx;
  color: #333;
  margin-bottom: 10rpx;
}

.goods-category {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.goods-price {
  font-size: 32rpx;
  color: #ff4d4f;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.goods-stock {
  font-size: 28rpx;
  color: #999;
}

.goods-actions {
  display: flex;
  flex-direction: column;
  justify-content: center;
  gap: 20rpx;
}

.btn {
  margin: 0;
  min-width: 120rpx;
}

.btn-primary {
  background: #07c160;
  color: #fff;
}

.btn-warning {
  background: #ff4d4f;
  color: #fff;
}

.add-btn {
  position: fixed;
  right: 30rpx;
  bottom: 30rpx;
  width: 100rpx;
  height: 100rpx;
  background: #07c160;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
  font-size: 60rpx;
  box-shadow: 0 4rpx 8rpx rgba(0,0,0,0.1);
}

.loading,
.no-more,
.empty {
  text-align: center;
  font-size: 28rpx;
  color: #999;
  padding: 30rpx 0;
}