/* pages/goods/list/list.wxss */
.container {
  padding: 30rpx;
  padding-bottom: 120rpx;
  background: #FFF9F4;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.search-bar {
  background: #fff;
  padding: 20rpx;
  border-radius: 12rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.05);
  width: 90%;
  min-width: 600rpx;
  max-width: 800rpx;
}

.search-input-wrap {
  position: relative;
  display: flex;
  align-items: center;
}

.search-bar input {
  height: 72rpx;
  background: rgba(183, 188, 201, 0.1);
  border-radius: 36rpx;
  padding: 0 30rpx;
  font-size: 28rpx;
  flex: 1;
  padding-right: 100rpx;
}

.search-actions {
  position: absolute;
  right: 30rpx;
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.icon-wrap {
  width: 40rpx;
  height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  transition: all 0.3s ease;
}

.icon-wrap:hover {
  background: rgba(183, 188, 201, 0.2);
}

.search-icon, .clear-icon {
  color: #B7BCC9;
}

.filter-bar {
  display: flex;
  flex-direction: column;
  background: #fff;
  padding: 20rpx;
  border-radius: 12rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.05);
  width: 90%;
  min-width: 600rpx;
  max-width: 800rpx;
  border-left: 6rpx solid #655E82;
}

.filter-title {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.title-text {
  font-size: 32rpx;
  font-weight: bold;
  color: #403F43;
  margin-right: 20rpx;
}

.title-line {
  flex: 1;
  height: 2rpx;
  background: linear-gradient(to right, #655E82, #E6DDDB);
}

.filter-content {
  display: flex;
  justify-content: space-around;
}

.filter-item {
  flex: 1;
  text-align: center;
  font-size: 28rpx;
  color: #403F43;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 10rpx 20rpx;
  transition: all 0.3s ease;
  border-radius: 8rpx;
}

.filter-item:hover {
  background: rgba(183, 188, 201, 0.1);
}

.filter-item .arrow {
  margin-left: 10rpx;
  color: #B7BCC9;
}

.goods-list {
  width: 90%;
  min-width: 600rpx;
  max-width: 800rpx;
  padding: 0;
}

.goods-item {
  background: white;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.04);
  width: 100%;
  box-sizing: border-box;
}

.goods-content {
  display: flex;
  margin-bottom: 20rpx;
}

.goods-image {
  width: 160rpx;
  height: 160rpx;
  border-radius: 12rpx;
  background-color: #f5f5f5;
  flex-shrink: 0;
}

.goods-info {
  flex: 1;
  margin-left: 24rpx;
  position: relative;
}

.goods-name {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 12rpx;
}

.goods-category {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 8rpx;
}

.goods-price {
  font-size: 34rpx;
  color: #ff4d4f;
  font-weight: 500;
  margin-bottom: 8rpx;
}

.goods-stock {
  font-size: 26rpx;
  color: #999;
}

.goods-status {
  position: absolute;
  top: 0;
  right: 0;
  font-size: 24rpx;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
}

.goods-status.on-sale {
  background: rgba(7, 193, 96, 0.1);
  color: #07c160;
}

.goods-status.off-sale {
  background: rgba(255, 77, 79, 0.1);
  color: #ff4d4f;
}

.goods-actions {
  display: flex;
  justify-content: flex-end;
  gap: 20rpx;
}

.action-btn {
  min-width: 120rpx;
  font-size: 26rpx;
  margin: 0;
}

.action-btn.edit {
  background: #f0f0f0;
  color: #666;
}

.action-btn.on {
  background: #07c160;
  color: white;
}

.action-btn.off {
  background: #ff4d4f;
  color: white;
}

.add-btn {
  position: fixed;
  right: 5%;
  bottom: 40rpx;
  width: 100rpx;
  height: 100rpx;
  background: #655E82;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
  font-size: 60rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.1);
  transition: all 0.3s ease;
}

.add-btn:active {
  transform: scale(0.95);
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.15);
}

.loading,
.no-more,
.empty {
  width: 90%;
  min-width: 600rpx;
  max-width: 800rpx;
  text-align: center;
  font-size: 28rpx;
  color: #B7BCC9;
  padding: 30rpx 0;
  background: white;
  border-radius: 12rpx;
  margin-top: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.04);
}