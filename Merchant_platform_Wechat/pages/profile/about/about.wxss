.container {
  min-height: 100vh;
  background: #f7f7f7;
  padding: 60rpx 30rpx;
}

.logo-wrap {
  text-align: center;
  margin-bottom: 60rpx;
}

.logo {
  width: 160rpx;
  height: 160rpx;
  margin-bottom: 20rpx;
}

.app-name {
  font-size: 32rpx;
  color: #333;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.version {
  font-size: 24rpx;
  color: #999;
}

.content {
  background: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
}

.section {
  margin-bottom: 40rpx;
}

.section:last-child {
  margin-bottom: 0;
}

.title {
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.text {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
} 