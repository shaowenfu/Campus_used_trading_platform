/* pages/profile/profile.wxss */
.container {
  padding-top: 0;
  min-height: 100vh;
  background: #f8f8f8;
}

.user-card {
  position: relative;
  padding: 0 0 60rpx 0;
  margin-bottom: 30rpx;
  overflow: hidden;
  width: 100%;
}

.card-background {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 400rpx;
  background: linear-gradient(135deg, #7EB2F2, #4A7AB2);
  z-index: 1;
}

.user-content {
  position: relative;
  z-index: 2;
  display: flex;
  align-items: flex-start;
  margin: 80rpx 32rpx 0;
  padding: 40rpx;
  background: white;
  border-radius: 24rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.08);
}

.avatar-wrap {
  position: relative;
  margin-right: 40rpx;
}

.avatar {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  border: 6rpx solid white;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
}

.edit-hint {
  position: absolute;
  left: 0;
  right: 0;
  bottom: 6rpx;
  background: rgba(0, 0, 0, 0.7);
  color: white;
  font-size: 24rpx;
  text-align: center;
  padding: 8rpx 0;
  border-bottom-left-radius: 80rpx;
  border-bottom-right-radius: 80rpx;
}

.user-info {
  flex: 1;
  padding-top: 20rpx;
}

.user-info .name {
  font-size: 44rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 24rpx;
}

.info-row {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.info-row .label {
  font-size: 28rpx;
  color: #999;
  width: 100rpx;
}

.info-row .value {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.menu-list {
  width: calc(100% - 64rpx);
  background: white;
  border-radius: 24rpx;
  margin: 0 auto;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.04);
  overflow: hidden;
}

.menu-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 36rpx;
  border-bottom: 1rpx solid #f5f5f5;
  transition: background-color 0.3s;
}

.menu-item:active {
  background-color: #f9f9f9;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-content {
  display: flex;
  align-items: center;
}

.menu-item .icon {
  width: 48rpx;
  height: 48rpx;
  margin-right: 24rpx;
}

.menu-item .text {
  font-size: 30rpx;
  color: #333;
  font-weight: 500;
}

.menu-item .arrow {
  color: #ccc;
  font-size: 32rpx;
}

.logout-wrap {
  margin: 48rpx auto;
  padding: 0 32rpx;
  width: calc(100% - 64rpx);
}

.logout-btn {
  width: 100%;
  height: 96rpx;
  line-height: 96rpx;
  text-align: center;
  background: white;
  border-radius: 48rpx;
  font-size: 32rpx;
  color: #ff4d4f;
  font-weight: 500;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
  transition: all 0.3s;
}

.logout-btn:active {
  transform: scale(0.98);
  opacity: 0.9;
}