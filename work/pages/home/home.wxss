/* 首页容器 */
.home-container {
  display: flex;
  flex-direction: column;
  padding: 10rpx;
}

/* 顶部导航栏 */
.top-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  background-color: #33cc33;
  color: white;
}

.top-bar .title {
  font-size: 32rpx;
}

.top-bar .icons {
  display: flex;
}

.icon {
  width: 40rpx;
  height: 40rpx;
  margin-left: 10rpx;
}

/* 轮播图部分 */
.carousel {
  height: 200rpx;
  margin-top: 10rpx;
}

.banner-image {
  width: 100%;
  height: 100%;
}

/* 导航按钮 */
.nav-section {
  display: flex;
  justify-content: space-around;
  margin: 20rpx 0;
}

.nav-button {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.nav-icon {
  width: 60rpx;
  height: 60rpx;
  margin-bottom: 10rpx;
}

/* 商品推荐区域 */
.recommend-section {
  margin: 20rpx 0;
}

.recommend-header {
  display: flex;
  align-items: center;
  margin-bottom: 10rpx;
}

.recommend-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 10rpx;
}

.product-list {
  display: flex;
  justify-content: space-around;
}

.product-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 150rpx;
}

.product-image {
  width: 150rpx;
  height: 150rpx;
  border-radius: 10rpx;
}

.product-name {
  margin-top: 10rpx;
  font-size: 24rpx;
}

