.search-bar {
  display: flex;
  align-items: center;
  padding: 10px;
  background-color: #f2f2f2;
}

.search-input {
  flex: 1;              /* 占据剩余空间 */
  height: 40px;
  padding: 0 10px;
  border-radius: 20px;
  border: 1px solid #ccc;
  font-size: 14px;
  margin-right: 10px;    /* 增加右边距，避免和按钮太近 */
}

.search-button {
  width: 80px;          /* 固定按钮宽度 */
  background-color: #3cc51f;
  color: white;
  height: 40px;
  padding: 5 0px;       /* 水平内边距 */
  border: none;
  border-radius: 20px;
  font-size: 14px;
  cursor: pointer;
  text-align: center;    /* 确保按钮文本居中 */
}

.search-button:hover {
  background-color: #4cbf1f;
}

.search-icon {
  width: 24px;
  height: 24px;
  margin-left: 10px;
  cursor: pointer;
}

.search-results {
  padding: 20px;
}

.product-item {
  padding: 10px;
  border-bottom: 1px solid #ddd;
}

.product-item text {
  font-size: 16px;
}






