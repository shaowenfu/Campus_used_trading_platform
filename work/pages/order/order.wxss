.orders-container {
  padding: 20rpx;
  background-color: #f5f5f5;
}

.header {
  padding: 20rpx 0;
  text-align: center;
}

.title {
  font-size: 30rpx;
  font-weight: bold;
}

.order-status-tabs {
  display: flex;
  justify-content: space-around;
  margin-top: 20rpx;
}

.status-tab {
  background-color: #3cc51f;
  color: white;
  padding: 10rpx 20rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  cursor: pointer;
}

.status-tab:hover {
  background-color: #4cbf1f;
}

.order-list {
  margin-top: 30rpx;
}

.order-item {
  background-color: white;
  padding: 20rpx;
  margin-bottom: 20rpx;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 5rpx rgba(0, 0, 0, 0.1);
}

.order-header {
  display: flex;
  justify-content: space-between;
  margin-bottom: 10rpx;
}

.order-id {
  font-size: 24rpx;
}

.order-status {
  font-size: 24rpx;
  color: #3cc51f;
}

.order-body text {
  display: block;
  margin-bottom: 5rpx;
  font-size: 22rpx;
}

.order-footer {
  display: flex;
  justify-content: flex-end;
}

.view-details {
  background-color: #3cc51f;
  color: white;
  padding: 5rpx 15rpx;
  border-radius: 20rpx;
  font-size: 22rpx;
  cursor: pointer;
}
