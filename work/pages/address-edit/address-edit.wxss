/* 页面容器 */
.container {
  padding: 20rpx;
}

/* 表单组样式 */
.form-group {
  margin-bottom: 20rpx;
}

label {
  font-size: 32rpx;
  color: #333;
  font-weight: bold;
  margin-bottom: 8rpx;
}

input, .picker {
  width: 100%;
  height: 80rpx;
  font-size: 28rpx;
  padding: 10rpx;
  margin-top: 10rpx;
  border: 1px solid #ddd;
  border-radius: 8rpx;
  background: #f8f8f8;
}

.picker {
  line-height: 80rpx;
}

/* 提交按钮样式 */
.submit-btn {
  width: 100%;
  padding: 20rpx;
  background-color: #ff6600;
  color: white;
  font-size: 32rpx;
  text-align: center;
  border-radius: 8rpx;
  margin-top: 20rpx;
}
