/* 收藏页面容器 */
.favorites-container {
  padding: 20rpx;
}

/* 收藏标题 */
.section-header {
  font-size: 28rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

/* 收藏商品列表 */
.favorites-list {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.favorite-item {
  width: 48%;
  background-color: #f9f9f9;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
  padding: 10rpx;
  box-shadow: 0 2rpx 5rpx rgba(0, 0, 0, 0.1);
  display: flex;
  flex-direction: column;
  align-items: center;
  cursor: pointer;
}

.favorite-image {
  width: 100%;
  height: 150rpx;
  object-fit: cover;
  border-radius: 8rpx;
}

.favorite-info {
  margin-top: 10rpx;
  text-align: center;
}

.favorite-name {
  font-size: 18rpx;
  color: #333;
}

.favorite-price {
  font-size: 16rpx;
  color: #999;
  margin-top: 5rpx;
}

/* 空收藏提示 */
.empty-favorites {
  text-align: center;
  font-size: 20rpx;
  color: #888;
  margin-top: 50rpx;
}
