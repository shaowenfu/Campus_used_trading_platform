.order-details-container {
  padding: 20rpx;
  background-color: #f5f5f5;
}

.header {
  padding: 20rpx 0;
  text-align: center;
}

.title {
  font-size: 30rpx;
  font-weight: bold;
}

.order-info {
  margin-top: 20rpx;
}

.order-info text {
  display: block;
  font-size: 24rpx;
  margin-bottom: 10rpx;
}

.order-actions {
  margin-top: 30rpx;
  display: flex;
  justify-content: space-between;
}

.cancel-order, .reorder {
  background-color: #3cc51f;
  color: white;
  padding: 10rpx 20rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  cursor: pointer;
}

.cancel-order {
  background-color: red;
}
