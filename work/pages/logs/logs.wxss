/**index.wxss**/
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
}
.scrollarea {
  flex: 1;
  overflow-y: hidden;
}

/* 调整输入框父容器 */
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #aaa;
  width: 80%;
  margin-top: 20px;
  margin-bottom: 20px;  /* 增加下边距 */
}

/* 修改 nickname-wrapper，减少上下间距 */
.nickname-wrapper {
  display: flex;
  width: 100%;
  padding: 8px;  /* 缩小内边距 */
  box-sizing: border-box;
  border-top: .5px solid rgba(0, 0, 0, 0.1);
  border-bottom: .5px solid rgba(0, 0, 0, 0.1);
  color: black;
  margin-bottom: 5px;  /* 减少输入框之间的间距 */
}

/* 统一输入框的高度和间距 */
.nickname-label {
  width: 105px;
  line-height: 36px;  /* 使标签垂直居中 */
}

.nickname-input {
  flex: 1;
  padding: 10px;
  font-size: 16px;
  border-radius: 4px;
  border: 1px solid #ddd;
  margin-left: 10px;
  height: 36px;  /* 统一输入框的高度 */
}




