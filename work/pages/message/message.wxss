.message-container {
  padding: 16px;
}

.message-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 12px;
  margin-bottom: 8px;
  background-color: #f5f5f5;
  border-radius: 8px;
}

.message-title {
  font-size: 16px;
  font-weight: bold;
  color: #333;
}

.message-date {
  font-size: 14px;
  color: #888;
}
