.remark-container {
  padding: 20rpx;
}

.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
}

.add-btn {
  background-color: #4caf50;
  color: white;
  padding: 10rpx 20rpx;
  border-radius: 10rpx;
}

.remark-item {
  padding: 20rpx;
  border: 1px solid #ddd;
  margin-bottom: 20rpx;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
  background-color: #f9f9f9;
}

.content {
  font-size: 28rpx;
  margin-bottom: 10rpx;
}

.text {
  color: #333;
}

.date {
  font-size: 24rpx;
  color: #999;
}

.actions {
  display: flex;
  justify-content: flex-end;
}

.edit-btn, .delete-btn {
  margin-left: 10rpx;
  font-size: 24rpx;
}
