/* pages/cart/cart.wxss */
.cart-container {
  padding: 20rpx;
  background-color: #f5f5f5;
}

.cart-header {
  font-size: 30rpx;
  text-align: center;
  margin-bottom: 20rpx;
}

.cart-item-list {
  margin-bottom: 30rpx;
}

.cart-item {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
  background-color: white;
  padding: 15rpx;
  border-radius: 10rpx;
  box-shadow: 0 0 5rpx rgba(0, 0, 0, 0.1);
}

.cart-item-image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 10rpx;
  margin-right: 15rpx;
}

.cart-item-details {
  flex: 1;
}

.cart-item-name {
  font-size: 28rpx;
  margin-bottom: 10rpx;
}

.cart-item-quantity {
  font-size: 24rpx;
}

.cart-item-actions button {
  background-color: #ff4d4d;
  color: white;
  padding: 5rpx 15rpx;
  border-radius: 20rpx;
  border: none;
  cursor: pointer;
}

.cart-total {
  font-size: 28rpx;
  text-align: right;
  margin-top: 20rpx;
}

.checkout-button button {
  width: 100%;
  background-color: #3cc51f;
  color: white;
  padding: 10rpx 0;
  border: none;
  border-radius: 20rpx;
  font-size: 30rpx;
  cursor: pointer;
}
